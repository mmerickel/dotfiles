alias dotf='cd $HOME/.dotfiles'

alias la='ls -a'
alias ll='ls -l'
alias l.='ls -d .*'
alias lrt='ll -rt'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias mkdir='mkdir -p'

alias ..='cd ..'

#alias vi='/usr/local/vim/bin/vim'
alias vi='/usr/bin/vim'

alias g='git'

if [[ -f "/usr/local/bin/vim" ]]; then
    alias vi='/usr/local/bin/vim'
fi

if [[ "$OSTYPE" == darwin* ]]; then
    alias ls='ls -G'
    export LSCOLORS=gxfxcxdxbxegedabagacad

    alias vim='mvim'
fi
