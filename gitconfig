[include]
    path = .gitconfig.inc
[core]
    excludesfile = ~/.gitignore
    autocrlf = input
[branch]
    autosetuprebase = always
[push]
    default = upstream
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto
[alias]
    cp = cherry-pick
    st = status -sb
    ci = commit
    co = checkout
    br = branch
    f = fetch --verbose
    up = remote update --prune
    stage = add
    unstage = reset HEAD
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    pullall = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
[mergetool "splice-osx"]
    cmd = "mvim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[mergetool "sourcetree"]
    cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
    trustExitCode = true
[merge]
	conflictstyle = diff3
