{
  "suggest.noselect": true,
  "suggest.enableFloat": false,
  "diagnostic.messageTarget": "echo",
  "signature.target": "echo",
  "hover.target": "echo",
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf",
      ]
    }
  },
  "workspace.ignoredFolders": [
      "$HOME",
      "$HOME/.cargo/**",
      "$HOME/.rustup/**"
  ]
}
